<div class='devise'>
  <div class='content'>
    <%= show_svg('auth_splash_full.svg') %> 
  </div>
  <div class='auth'>
    <div>
      <h1>Create Account</h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :first_name, :class => 'text-label' %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first-name", :class => 'text-input' %>
        </div>
        
        <div class="field">
          <%= f.label :last_name, :class => 'text-label' %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last-name", :class => 'text-input' %>
        </div>

        <div class="field">
          <%= f.label :username, :class => 'text-label' %>
          <%= f.text_field :username, autofocus: true, autocomplete: "username", :class => 'text-input' %>
        </div>

        <div class="field">
          <%= f.label :email, :class => 'text-label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'text-input' %>
        </div>

        <div class="field">
          <%= f.label :phone, :class => 'text-label' %>
          <%= f.telephone_field :phone, autofocus: true, autocomplete: "phone", :class => 'text-input' %>
        </div>

        <div class="field">
          <%= f.label :password, :class => 'text-label' %>
          <%# <% if @minimum_password_length %>
          <%# <em>(<%= @minimum_password_length characters minimum)</em> %> 
          <%# <% end %>
          <%= f.password_field :password, autocomplete: "new-password", :class => 'text-input' %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, :class => 'text-label' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'text-input' %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>
      <div class='divider'>
        <div></div>
        <p>or</p>
        <div></div>
      </div>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>