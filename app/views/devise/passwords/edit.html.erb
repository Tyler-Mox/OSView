<div class='devise'>
  <div class='content'>
    <%= show_svg('auth_splash_full.svg') %> 
  </div>
  <div class='auth'>
    <div>
      <%= image_tag "osview_logo.png" %>
      <h1>Change your password</h1>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, data: { turbo: false }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <%= f.label :password, "New password", :class => 'text-label' %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password" :class => 'text-input' %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Confirm new password", :class => 'text-label' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'text-input' %>
        </div>

        <div class="actions">
          <%= f.submit "Change my password" %>
        </div>
      <% end %>
    </div>
  </div>
</div>