<div class='devise'>
  <div class='content'>
    <%= show_svg('auth_splash_full.svg') %> 
  </div>
  <div class='auth'>
    <div>
      <%= image_tag "osview_logo.png" %>
        <h1>Forgot your password?</h1>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, data: { turbo: false }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :email, :class => 'text-label' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'text-input' %>
          </div>

          <div class="actions">
            <%= f.submit "Send me reset password instructions" %>
          </div>
        <% end %>
      </div>
  </div>
</div>
